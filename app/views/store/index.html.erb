<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Bem vindo Ã  Book Store</h1>
<table>
  <tr>
    <td><p>Produtos</p></td>
    <td ><p style="float:right;">Categoria</p></td>
  </tr> 
  <% @products.each do |product| %>
  <% if (product.qtd > 0) %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= product.title%></dt>
        <dd><%= truncate(strip_tags(product.description), lenght: 200) %> </dd>
      </dl>
	  <td>
        <dt><%= product.categoria%></dt>
      </td>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= product.categoria%></dt>
        <dd><%= truncate(strip_tags(product.categoria), lenght: 200) %> </dd>
      </dl>
    </td>
    <td class="list_actions">
      <button type="button" class="btn btn-default"><%= link_to 'Mostrar', product %></button> 
    </td>
  </tr>
  
  <% else %>
    <tr class="list_qtd_vazio">
      <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= product.title%></dt>
        <dd><%= truncate(strip_tags(product.description), lenght: 88) %> </dd>
      </dl>
	   <td>
        <dt><%= product.categoria%></dt>
      </td>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= product.categoria%></dt>
        <dd><%= truncate(strip_tags(product.categoria), lenght: 200) %> </dd>
      </dl>
    </td>
    <td class="list_actions">
     <button type="button" class="btn btn-default"><%= link_to 'Mostrar', product %></button> 
    </tr>
  <%end %>
  <% end %>
</table>

<br />


