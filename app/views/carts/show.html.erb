<script
        type="text/javascript"
        language="javascript">
        document.getElementById("carrinho").focus();
</script>


<div class="cadastro">
	
	<div class="carrinho">
	<p id="notice"><%= notice %></p>


	<h2>Carrinho</h2>
	
	<table >
		<th>
			<tr>
 				<td><p>Quantidade</p></td>
 				<td><p>Item</p></td>
 				<td><p>Pre√ßo</p></td>
 			</tr>
		</th>
		<% @cart.line_items.each do |item| %>

		

		<tr >

			<td><p><%= button_to '+', line_items_path(product_id: item.product), class: 'btn-simples'%></p>
				<p><%= item.quantity %>&times;</p>
				<p><%= button_to '-', item, method: :delete ,  class: 'btn-simples'%></p>
			</td>
			<td><p><%= item.product.title %></p></td>
			<td class="item_price"><p>R<%= number_to_currency(item.total_price) %></p></td>

		</tr>
		<% end %>
		
		<tr class="total_line precoTotal">
			<hr>
			<td colspan="2"><p>Total</p></td>
			<td class="total_cell"><p>R<%= number_to_currency(@cart.total_price) %></p></td>
		</tr>
 	</table>
 	</div>
</br>

<%= button_to 'Esvaziar carrinho', @cart, method: :delete, data: {confirm: 'Tem certeza?'}, class: 'btn-simples'	%> 

</br>

<%= link_to 'Editar', edit_cart_path(@cart) , class: 'btn-simples' %> |
<%= link_to 'Continuar comprando', store_path , class: 'btn-simples' %>

</div>